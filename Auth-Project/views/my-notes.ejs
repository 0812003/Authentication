<!DOCTYPE html>
<html>

<head>
    <title>My Notes</title>
    <!-- <link rel="stylesheet" href="style.css"> -->
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body>

    <h2 class="text-2xl font-bold flex items-center justify-center p-2 mb-5">My Notes</h2>

    <div class="notes-container container flex flex-col items-center justify-center w-full space-y-4 px-4">
        <% if (notes.length===0) { %>
            <h1 class="text-xl text-gray-400">No Notes Found!</h1>
            <% } else { %>
                <% notes.forEach(note=> { %>
                    <div class="note-card w-full md:w-2/3 bg-white shadow-md rounded-lg p-4 border border-gray-200">
                        <h3 class="text-lg font-semibold text-gray-800 mb-2">
                            <%= note.title %>
                        </h3>
                        <p class="text-gray-700 mb-4">
                            <%= note.content %>
                        </p>
                        <form action="/delete-note" method="POST">
                            <input type="hidden" name="noteId" value="<%= note._id %>">
                            <button type="submit"
                                class="delete-btn px-4 py-2 bg-red-100 text-red-600 border border-red-300 rounded hover:bg-red-500 hover:text-white transition">
                                Delete
                            </button>
                        </form>
                    </div>
                <% }) %>
                <%}%>
    </div>
    <div class="my-6 text-center">
        <a href="/dashboard" class="text-blue-600 hover:text-blue-800 font-medium underline transition">
            ‚Üê Back to Dashboard
        </a>
    </div>


</body>

</html>